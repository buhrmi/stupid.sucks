.section.sign_up
  .wrapped
    %h2 Oh, hey there #{cookies[:name]}!
    %p You'll be #{cookies[:offering]} against stupid in no time!
  .wrapped.form
    .left_side
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        - resource.errors.full_messages.each do |msg|
          .error= msg
        .field
          = f.label :email
          = f.email_field :email, autofocus: true
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "off"
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          %label
          = f.submit "Complete Sign Up"
    .right_side
      - if devise_mapping.omniauthable?
        - resource_class.omniauth_providers.each do |provider|
          = link_to omniauth_authorize_path(resource_name, provider), :class=>"provider #{provider}" do
            %i{:class=>"fa fa-#{provider}"}
            %span Sign up with Facebook
    .divider
      %span Or
